    <div class="todoList" id="loginPanel">
        <section id="localLoginPanel">
            <h2>Log in</h2>
            @Html.Partial("_Login")
        </section>
        <section id="socialLoginPanel">
            <h2>Log in using</h2>
            <p> </p>
            @Html.Action("ExternalLoginsList", "Account", new { ReturnUrl = ViewBag.ReturnUrl })
            <div class="signup-button">
                <p><button class="btn btn-success" id="showRegister">Sign up</button>&nbsp; for a new account</p>
            </div>            
        </section>
    </div>
    <div class="todoList" id="registerPanel">
        <h2>Sign up</h2>
        @Html.Partial("_Register")
        <p>Already signed up? &nbsp;<button class="btn btn-success" id="showLogin">Log in</button></p>
    </div>